<?xml version="1.0"?>
<ruleset name="SWAMP-Custom-Ruleset"
		 xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">
  <description>
	This is a customized PMD ruleset for SWAMP
  </description>

  <rule ref="rulesets/java/android.xml"></rule>
  <rule ref="rulesets/java/basic.xml"></rule>
  <rule ref="rulesets/java/braces.xml"></rule>
  <rule ref="rulesets/java/clone.xml"></rule>
  <rule ref="rulesets/java/codesize.xml">
	<exclude name="TooManyFields" />
  </rule>
  <rule ref="rulesets/java/comments.xml">
    <exclude name="CommentSize"/>
    <exclude name="CommentRequired"/>
  </rule>
  <rule ref="rulesets/java/controversial.xml"></rule>
  <rule ref="rulesets/java/coupling.xml">
    <exclude name="LawOfDemeter"/>
  </rule>
  <rule ref="rulesets/java/design.xml"></rule>
  <rule ref="rulesets/java/empty.xml"></rule>
  <rule ref="rulesets/java/finalizers.xml"></rule>
  <rule ref="rulesets/java/imports.xml"></rule>
  <rule ref="rulesets/java/j2ee.xml"></rule>
  <rule ref="rulesets/java/javabeans.xml"></rule>
  <rule ref="rulesets/java/junit.xml"></rule>
  <rule ref="rulesets/java/logging-jakarta-commons.xml"></rule>
  <rule ref="rulesets/java/logging-java.xml">
	<exclude name="SystemPrintln" />
  </rule>
  <rule ref="rulesets/java/migrating.xml"></rule>
  <rule ref="rulesets/java/migrating_to_13.xml"></rule>
  <rule ref="rulesets/java/migrating_to_14.xml"></rule>
  <rule ref="rulesets/java/migrating_to_15.xml"></rule>
  <rule ref="rulesets/java/migrating_to_junit4.xml"></rule>
  <rule ref="rulesets/java/naming.xml">
	<exclude name="ShortVariable" />
	<exclude name="LongVariable" />
	<exclude name="ClassNamingConventions" />
	<exclude name="MethodNamingConventions" />
	<exclude name="VariableNamingConventions" />
  </rule>
  <rule ref="rulesets/java/optimizations.xml">
    <exclude name="MethodArgumentCouldBeFinal"/>
    <exclude name="LocalVariableCouldBeFinal"/>
  </rule>
  <rule ref="rulesets/java/strictexception.xml"></rule>
  <rule ref="rulesets/java/strings.xml"></rule>
  <rule ref="rulesets/java/sunsecure.xml"></rule>
  <rule ref="rulesets/java/typeresolution.xml"> </rule>
  <rule ref="rulesets/java/unnecessary.xml"></rule>
  <rule ref="rulesets/java/unusedcode.xml"></rule>
</ruleset>
